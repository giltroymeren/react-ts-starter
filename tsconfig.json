{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "./dist",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "strict": true,
    "target": "es5",
  },
  "include": ["src/**/*", "**/*.ts"],
  "exclude": ["node_modules"],
}
